\newcommand{\havcoordinate}[4]{
  \foreach \i in {#1,...,#2} {
    \foreach \j in {#3,...,#4} {
      \coordinate (\i-\j) at ({(\i-\j)/2},{(\j+1)});
    }
  }
  \foreach \i in {#1,...,#2} {
    \foreach \j in {#3,...,#4} {
      \coordinate (\i--\j) at ({(\i-\j)/2},{(\j+1+1/2)});
    }
  }
}

